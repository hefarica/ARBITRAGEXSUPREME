{
  "name": "arbitragex-pro-2025",
  "version": "2.0.0",
  "description": "Plataforma SaaS Enterprise más avanzada para arbitraje DeFi",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "jest --config=jest.config.root.js",
    "test:unit": "jest --config=jest.config.root.js --testPathPattern=tests/unit",
    "test:integration": "jest --config=jest.config.root.js --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:coverage": "jest --config=jest.config.root.js --coverage",
    "test:watch": "jest --config=jest.config.root.js --watch",
    "test:ci": "jest --config=jest.config.root.js --ci --coverage && playwright test",
    "test:performance": "turbo run test:performance",
    "test:security": "turbo run test:security",
    "test:deployment": "turbo run test:deployment",
    "test:db-connections": "node scripts/test-db-connections.js",
    "test:blockchain-connections": "node scripts/test-blockchain-connections.js",
    "test:setup": "npm run test:install-deps",
    "test:install-deps": "npm install --save-dev jest @types/jest ts-jest @playwright/test dotenv",
    "clean": "turbo run clean",
    "validate": "bash scripts/validate-complete.sh",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f infrastructure/kubernetes/",
    "migrate:dev": "turbo run migrate:dev",
    "migrate:prod": "turbo run migrate:prod",
    "seed": "turbo run seed",
    "vault:init": "bash scripts/vault/init-vault.sh",
    "vault:integrate": "bash scripts/vault/integrate-vault.sh", 
    "vault:start": "vault server -config=config/vault/vault-config.hcl",
    "vault:dev": "vault server -dev -dev-root-token-id=arbitragex-dev-token",
    "vault:status": "vault status",
    "vault:health": "curl http://localhost:8200/v1/sys/health",
    "vault:ui": "echo 'Vault UI disponible en: http://localhost:8200/ui'",
    "vault:docker": "docker-compose -f docker-compose.vault.yml up -d",
    "vault:docker-stop": "docker-compose -f docker-compose.vault.yml down",
    "secrets:get": "bash scripts/get-secret.sh",
    "blockchain:test": "bash scripts/blockchain/test-connectivity.sh",
    "blockchain:init": "node -e \"const {initializeMultiChain} = require('./src/lib/blockchain/multi-chain-provider'); initializeMultiChain().then(() => console.log('✅ Multi-chain initialized')).catch(console.error);\"",
    "blockchain:status": "curl -s http://localhost:3000/api/blockchain/network-status | jq .",
    "arbitrage:scan": "curl -s http://localhost:3000/api/arbitrage/cross-chain-opportunities?scan=true | jq .",
    "arbitrage:opportunities": "curl -s http://localhost:3000/api/arbitrage/cross-chain-opportunities | jq ."
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "turbo": "^1.10.12",
    "typescript": "^5.2.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "@playwright/test": "^1.40.0",
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arbitragex/arbitragex-pro-2025.git"
  },
  "author": "ArbitrageX Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "@cosmjs/stargate": "^0.36.0",
    "@fastify/cors": "^11.1.0",
    "@solana/web3.js": "^1.98.4",
    "axios": "^1.11.0",
    "bitcoin-core": "^5.0.0",
    "cardano-serialization-lib": "10.0.0-beta.16",
    "ethers": "^5.7.2",
    "fastify": "^5.5.0",
    "pino-pretty": "^13.1.1",
    "ws": "^8.18.3"
  }
}
