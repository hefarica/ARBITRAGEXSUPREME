{
  "name": "@arbitragex/api",
  "version": "2.0.0",
  "description": "ArbitrageX Pro 2025 - Enterprise API Backend",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "npx jest --config jest.config.basic.js",
    "test:unit": "npx jest --config jest.config.basic.js tests/unit",
    "test:integration": "npx jest --config jest.config.simple.js tests/integration",
    "test:e2e": "npx jest --config jest.config.simple.js tests/e2e",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:watch": "npx jest --config jest.config.enterprise.ts --watch",
    "test:coverage": "npx jest --config jest.config.enterprise.ts --coverage",
    "test:coverage:open": "npx jest --config jest.config.enterprise.ts --coverage && open coverage/lcov-report/index.html",
    "test:performance": "k6 run tests/performance/*.js",
    "test:security": "npm audit && snyk test",
    "test:deployment": "node scripts/test-deployment.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "migrate:dev": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy", 
    "migrate:reset": "prisma migrate reset",
    "seed": "tsx prisma/seeds/index.ts",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:setup": "./scripts/migrate.sh setup",
    "db:migrate": "./scripts/migrate.sh migrate",
    "db:seed": "./scripts/migrate.sh seed",
    "db:verify": "./scripts/migrate.sh verify",
    "db:reset": "./scripts/migrate.sh reset",
    "db:backup": "./scripts/rollback.sh backup",
    "db:restore": "./scripts/rollback.sh restore",
    "db:status": "./scripts/rollback.sh status",
    "db:rollback:clean": "./scripts/rollback.sh clean",
    "docker:build": "docker build -t arbitragex-api .",
    "docker:run": "docker run -p 3001:3001 arbitragex-api"
  },
  "dependencies": {
    "@arbitragex/blockchain-connectors": "file:../../packages/blockchain-connectors",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/redis": "^6.1.1",
    "@fastify/websocket": "^8.3.1",
    "@prisma/client": "^5.6.0",
    "@trpc/server": "^10.45.0",
    "bcrypt": "^5.1.1",
    "ethers": "^6.8.1",
    "fastify": "^4.24.3",
    "ioredis": "^5.7.0",
    "joi": "^17.11.0",
    "stripe": "^14.7.0",
    "web3": "^4.3.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/ws": "^8.5.9",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prisma": "^5.6.0",
    "snyk": "^1.1248.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.5",
    "typescript": "^5.2.2"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
