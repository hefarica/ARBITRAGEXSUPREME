# Testing específico
JEST_VERBOSE=false
TEST_TIMEOUT=30000
COVERAGE_THRESHOLD=80

# Redis para testing (opcional)
REDIS_URL="redis://localhost:6379/1"

# Stripe para testing
STRIPE_SECRET_KEY="sk_test_test_key_for_arbitragex_testing"
