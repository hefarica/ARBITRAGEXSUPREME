# External APIs para testing (mocks)
COINGECKO_API_KEY="test-coingecko-api-key"
ETHERSCAN_API_KEY="test-etherscan-api-key"
BSCSCAN_API_KEY="test-bscscan-api-key"
POLYGONSCAN_API_KEY="test-polygonscan-api-key"

# Monitoring para testing (disabled)
MONITORING_ENABLED=false
METRICS_ENABLED=false

# WebSocket para testing
WS_PORT=3002
WS_ENABLED=true