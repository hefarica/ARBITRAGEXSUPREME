NODE_ENV=test
PORT=3001

# Base de datos de testing
DATABASE_URL="postgresql://arbitragex:password@localhost:5432/arbitragex_test"
DATABASE_TEST_URL="postgresql://arbitragex:password@localhost:5432/arbitragex_test"

# JWT para testing
JWT_SECRET="test-jwt-secret-key-for-arbitragex-testing"
JWT_EXPIRATION="24h"

# API Keys para testing (mocks)
ETHEREUM_RPC_URL="https://eth-mainnet.alchemyapi.io/v2/test-key"
BSC_RPC_URL="https://bsc-dataseed.binance.org/"
