# ArbitrageX Supreme - Blockchain API Keys Configuration
# Configuración de claves de API para conectores blockchain reales
# IMPORTANTE: Estas son claves de ejemplo - DEBES reemplazarlas con claves reales

# =============================================================================
# ETHEREUM MAINNET & L2 NETWORKS - ALCHEMY
# =============================================================================
# Obtener claves gratis en: https://alchemy.com (300M requests/mes gratis)
ALCHEMY_ETHEREUM_KEY=your-ethereum-alchemy-key-here
ALCHEMY_POLYGON_KEY=your-polygon-alchemy-key-here
ALCHEMY_ARBITRUM_KEY=your-arbitrum-alchemy-key-here
ALCHEMY_OPTIMISM_KEY=your-optimism-alchemy-key-here
ALCHEMY_BASE_KEY=your-base-alchemy-key-here

# =============================================================================
# INFURA (ALTERNATIVO/FALLBACK)
# =============================================================================
# Obtener claves gratis en: https://infura.io
INFURA_PROJECT_ID=your-infura-project-id-here
INFURA_PROJECT_SECRET=your-infura-secret-here

# =============================================================================
# BSC (BINANCE SMART CHAIN) - PÚBLICO
# =============================================================================
# BSC usa RPCs públicos (sin API key requerida)
BSC_RPC_URL=https://bsc-dataseed1.binance.org
BSC_RPC_URL_BACKUP=https://bsc-dataseed2.binance.org

# =============================================================================
# AVALANCHE C-CHAIN - PÚBLICO
# =============================================================================
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
AVALANCHE_RPC_URL_BACKUP=https://rpc.ankr.com/avalanche

# =============================================================================
# FANTOM OPERA - PÚBLICO
# =============================================================================
FANTOM_RPC_URL=https://rpc.ftm.tools
FANTOM_RPC_URL_BACKUP=https://rpc2.fantom.network

# =============================================================================
# SOLANA - PÚBLICO Y PREMIUM
# =============================================================================
# RPC público (limitado)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# RPC premium (recomendado para producción)
HELIUS_API_KEY=your-helius-api-key-here
QUICKNODE_SOLANA_URL=your-quicknode-solana-endpoint

# =============================================================================
# CONFIGURACIÓN DE FALLBACK Y REDUNDANCIA
# =============================================================================
# Habilitar fallback automático entre proveedores
ENABLE_RPC_FALLBACK=true
# Timeout por request (ms)
RPC_TIMEOUT=10000
# Número máximo de reintentos
MAX_RPC_RETRIES=3
# Intervalo entre health checks (ms)
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# CONFIGURACIÓN DE RATE LIMITING
# =============================================================================
# Requests por segundo por proveedor
ETHEREUM_RPS=10
POLYGON_RPS=10
BSC_RPS=5
SOLANA_RPS=8

# =============================================================================
# WEBSOCKET ENDPOINTS (PARA REAL-TIME)
# =============================================================================
ETHEREUM_WS_URL=wss://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
POLYGON_WS_URL=wss://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
BSC_WS_URL=wss://bsc-ws-node.nariox.org:443

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================
# Encriptar API keys en base de datos
ENCRYPT_API_KEYS=true
# Rotar claves automáticamente
AUTO_ROTATE_KEYS=false
# Logging de requests blockchain (solo en desarrollo)
LOG_BLOCKCHAIN_REQUESTS=true

# =============================================================================
# INSTRUCCIONES DE CONFIGURACIÓN
# =============================================================================
# 1. Ir a https://alchemy.com y crear cuenta gratuita
# 2. Crear apps para: Ethereum, Polygon, Arbitrum, Optimism, Base
# 3. Copiar las API keys y reemplazar "your-*-key-here"
# 4. Para Solana: crear cuenta en Helius.xyz o QuickNode
# 5. Verificar conectividad: npm run blockchain:test
# 
# PRODUCCIÓN:
# - Usar Vault/KMS para almacenar las claves
# - Configurar rate limiting apropiado
# - Monitorear uso de cuotas
# - Implementar rotación de claves