{
  "dashboard": {
    "id": null,
    "uid": "security-monitoring-arbitragex",
    "title": "ArbitrageX Supreme - Security Monitoring",
    "description": "Dashboard de monitoreo de seguridad para ArbitrageX Supreme - Ingenio Pichichi S.A.",
    "tags": ["security", "arbitragex", "monitoring", "ingenio-pichichi"],
    "style": "dark",
    "timezone": "utc",
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "annotations": {
      "list": [
        {
          "name": "Security Events",
          "datasource": "prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\".*Security.*|.*Attack.*\"}",
          "iconColor": "red",
          "step": "60s"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(arbitragex_security_events_total, instance)",
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "options": [],
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "attack_type",
          "type": "query",
          "query": "label_values(arbitragex_security_attacks_total, attack_type)",
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "options": [],
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Security Events Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(arbitragex_security_events_total[$__rate_interval]))",
            "legendFormat": "Events/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            },
            "unit": "reqps"
          }
        }
      },
      {
        "id": 2,
        "title": "Attack Attempts",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(arbitragex_security_attacks_total[1h]))",
            "legendFormat": "Attacks (1h)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "title": "Failed Logins",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(arbitragex_auth_failed_logins_total[1h]))",
            "legendFormat": "Failed Logins (1h)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 20},
                {"color": "red", "value": 100}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "Rate Limit Hits",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(arbitragex_rate_limit_exceeded_total[1h]))",
            "legendFormat": "Rate Limits (1h)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 200}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 5,
        "title": "Security Events Timeline",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum by (event_type) (rate(arbitragex_security_events_total[$__rate_interval]))",
            "legendFormat": "{{event_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "axisColorMode": "text",
              "scaleDistribution": {"type": "linear"},
              "axisCenteredZero": false,
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "off"}
            }
          }
        },
        "options": {
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "visible", "placement": "bottom", "calcs": []}
        }
      },
      {
        "id": 6,
        "title": "Attack Types Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum by (attack_type) (increase(arbitragex_security_attacks_total[1h]))",
            "legendFormat": "{{attack_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "custom": {
              "hideFrom": {"legend": false, "tooltip": false, "vis": false}
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "pie",
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "visible", "placement": "right", "calcs": []},
          "displayLabels": ["name", "value"]
        }
      },
      {
        "id": 7,
        "title": "Geographic Attack Distribution",
        "type": "geomap",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum by (country_code) (increase(arbitragex_security_attacks_total[1h]))",
            "legendFormat": "{{country_code}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "orange", "value": 15},
                {"color": "red", "value": 30}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "view": {
            "id": "coords",
            "lat": 20,
            "lon": 0,
            "zoom": 2
          },
          "controls": {
            "mouseWheelZoom": true,
            "showZoom": true,
            "showAttribution": true
          },
          "basemap": {
            "type": "default"
          },
          "layers": [
            {
              "type": "markers",
              "config": {
                "size": {
                  "field": "Value",
                  "fixed": 5,
                  "max": 15,
                  "min": 2
                },
                "color": {
                  "field": "Value"
                },
                "fillOpacity": 0.4,
                "strokeWidth": 1,
                "strokeColor": "white"
              }
            }
          ]
        }
      },
      {
        "id": 8,
        "title": "Authentication Metrics",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 26},
        "targets": [
          {
            "expr": "rate(arbitragex_auth_successful_logins_total[$__rate_interval])",
            "legendFormat": "Successful Logins",
            "refId": "A"
          },
          {
            "expr": "rate(arbitragex_auth_failed_logins_total[$__rate_interval])",
            "legendFormat": "Failed Logins",
            "refId": "B"
          },
          {
            "expr": "rate(arbitragex_auth_token_refreshed_total[$__rate_interval])",
            "legendFormat": "Token Refreshes",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps"
          }
        }
      },
      {
        "id": 9,
        "title": "Rate Limiting Status",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 26},
        "targets": [
          {
            "expr": "sum by (endpoint) (rate(arbitragex_rate_limit_exceeded_total[$__rate_interval]))",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps"
          }
        }
      },
      {
        "id": 10,
        "title": "Security Alerts Summary",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 34},
        "targets": [
          {
            "expr": "ALERTS{job=\"arbitragex-app\", alertname=~\".*Security.*|.*Attack.*|.*Failed.*\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "alertname"},
              "properties": [
                {"id": "displayName", "value": "Alert Name"},
                {"id": "width", "value": 200}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "alertstate"},
              "properties": [
                {"id": "displayName", "value": "State"},
                {"id": "width", "value": 100},
                {"id": "custom.cellOptions", "value": {"type": "color-text"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "severity"},
              "properties": [
                {"id": "displayName", "value": "Severity"},
                {"id": "width", "value": 100}
              ]
            }
          ]
        },
        "options": {
          "showHeader": true,
          "sortBy": [{"desc": true, "displayName": "Time"}]
        }
      },
      {
        "id": 11,
        "title": "WAF and DDoS Protection Status",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 42},
        "targets": [
          {
            "expr": "cloudflare_requests_blocked_total",
            "legendFormat": "Blocked Requests",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 1000}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 12,
        "title": "JWT Token Security",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 42},
        "targets": [
          {
            "expr": "rate(arbitragex_jwt_tokens_issued_total[$__rate_interval])",
            "legendFormat": "Tokens Issued",
            "refId": "A"
          },
          {
            "expr": "rate(arbitragex_jwt_tokens_revoked_total[$__rate_interval])",
            "legendFormat": "Tokens Revoked",
            "refId": "B"
          },
          {
            "expr": "rate(arbitragex_jwt_invalid_attempts_total[$__rate_interval])",
            "legendFormat": "Invalid Token Attempts",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps"
          }
        }
      },
      {
        "id": 13,
        "title": "Input Validation Violations",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 42},
        "targets": [
          {
            "expr": "sum by (violation_type) (rate(arbitragex_input_validation_violations_total[$__rate_interval]))",
            "legendFormat": "{{violation_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps"
          }
        }
      }
    ]
  }
}