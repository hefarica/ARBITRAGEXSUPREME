# ArbitrageX Supreme - Test Configuration
# Configuración usando RPCs públicos para testing inmediato

# =============================================================================
# BLOCKCHAIN RPC ENDPOINTS - PÚBLICOS (PARA TESTING)
# =============================================================================

# Ethereum - RPCs públicos
ALCHEMY_ETHEREUM_KEY=
ETHEREUM_RPC_PUBLIC=https://ethereum.publicnode.com
ETHEREUM_RPC_BACKUP=https://eth.llamarpc.com

# Polygon - RPCs públicos  
ALCHEMY_POLYGON_KEY=
POLYGON_RPC_PUBLIC=https://polygon-rpc.com
POLYGON_RPC_BACKUP=https://polygon.llamarpc.com

# BSC - RPCs públicos
BSC_RPC_URL=https://bsc-dataseed1.binance.org
BSC_RPC_URL_BACKUP=https://bsc-dataseed2.binance.org

# Arbitrum - RPCs públicos
ALCHEMY_ARBITRUM_KEY=
ARBITRUM_RPC_PUBLIC=https://arbitrum.publicnode.com
ARBITRUM_RPC_BACKUP=https://arb1.arbitrum.io/rpc

# Optimism - RPCs públicos  
ALCHEMY_OPTIMISM_KEY=
OPTIMISM_RPC_PUBLIC=https://optimism.publicnode.com
OPTIMISM_RPC_BACKUP=https://mainnet.optimism.io

# Avalanche - RPCs públicos
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
AVALANCHE_RPC_URL_BACKUP=https://rpc.ankr.com/avalanche

# Fantom - RPCs públicos
FANTOM_RPC_URL=https://rpc.ftm.tools
FANTOM_RPC_URL_BACKUP=https://rpc2.fantom.network

# Solana - RPC público
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# =============================================================================
# CONFIGURACIÓN GENERAL
# =============================================================================
NODE_ENV=development
PORT=3000
ENABLE_RPC_FALLBACK=true
RPC_TIMEOUT=10000
MAX_RPC_RETRIES=3
HEALTH_CHECK_INTERVAL=30000

# Rate limiting (más conservador para RPCs públicos)
ETHEREUM_RPS=2
POLYGON_RPS=2  
BSC_RPS=2
SOLANA_RPS=2

# Logging
LOG_LEVEL=info
LOG_BLOCKCHAIN_REQUESTS=true

# Security (test keys)
ENCRYPTION_KEY=test-key-32-bytes-for-development-only
JWT_SECRET=test-jwt-secret-change-in-production