{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "outputs": ["test-results/**"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "test:performance": {
      "outputs": ["performance-results/**"]
    },
    "test:security": {
      "outputs": ["security-results/**"]
    },
    "test:deployment": {
      "outputs": ["deployment-results/**"]
    },
    "clean": {
      "cache": false
    },
    "migrate:dev": {
      "cache": false
    },
    "migrate:prod": {
      "cache": false
    },
    "seed": {
      "dependsOn": ["migrate:dev"],
      "cache": false
    }
  }
}